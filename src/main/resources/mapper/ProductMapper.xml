<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljh.shop.mapper.ProductMapper">

    <resultMap id="ProductMap" type="com.ljh.shop.domain.Product">
        <id     property="id"        column="id"/>
        <result property="name"      column="name"/>
        <result property="price"     column="price"/>
        <result property="stock"     column="stock"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findAll" resultMap="ProductMap">
        SELECT id, name, price, stock, created_at
        FROM product
        ORDER BY id DESC
    </select>

    <select id="findById" parameterType="long" resultMap="ProductMap">
        SELECT id, name, price, stock, created_at
        FROM product
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.ljh.shop.domain.Product"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product(name, price, stock)
        VALUES(#{name}, #{price}, #{stock})
    </insert>

    <update id="update" parameterType="com.ljh.shop.domain.Product">
        UPDATE product
        SET name = #{name},
            price = #{price},
            stock = #{stock}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM product WHERE id = #{id}
    </delete>
</mapper>
